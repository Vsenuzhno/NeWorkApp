<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_jobs"
        android:name="ru.netology.nework.activity.JobsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".activity.JobsFragment"
        tools:listitem="@layout/card_job" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:contentDescription="@string/button_add_job"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_24"
        android:layout_gravity="center|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>